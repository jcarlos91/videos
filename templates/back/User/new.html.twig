{% extends 'base-admin.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title">{{ title|trans }}</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <h3>Datos </h3>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.lastName) }}
                                {{ form_widget(form.lastName) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.motherLastName) }}
                                {{ form_widget(form.motherLastName) }}
                                {{ form_errors(form.motherLastName) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.plainPassword) }}
                                {{ form_widget(form.plainPassword) }}
                                {{ form_errors(form.plainPassword) }}
                            </div>
                        </div>
                    </div>

                    <div class="text-center" style="margin-top: 10px;">
                        {{ form_widget(form.save) }}
                        <button class="btn btn-action" onclick="window.location='{{ path('admin_user_list') }}'"> Regresar</button>
                    </div>
                </div>
                {{ form_errors(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}