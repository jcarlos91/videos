{% extends 'base-back.html.twig' %}
{% block stylesheets  %}
    <link rel="stylesheet" href="{{ asset('src/css/login_back.css') }}">
{% endblock %}


{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->

            <!-- Icon -->
            <div class="fadeIn first">
                <img src="{{ asset('src/img/general-electrics.png') }}" id="icon" alt="User Icon"/>
            </div>

            <!-- Login Form -->
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('admin_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="fadeIn second" placeholder="email" required autofocus>
                <input type="password" name="password" id="inputPassword" class="fadeIn third"  placeholder="password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary" type="submit" style="margin-top: 20px; margin-bottom: 20px;">
                    Sign in
                </button>
            </form>
        </div>
    </div>
{% endblock %}
